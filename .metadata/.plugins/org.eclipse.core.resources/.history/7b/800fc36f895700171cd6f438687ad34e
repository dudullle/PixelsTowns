	public static void initPlayer(String PlayerName, String ip)
	{
		Connection conn = getConn();
		ResultSet rs = null;
		Statement stmt = null;

		try {
			stmt = (Statement) conn.createStatement();
			int i = 0;
			rs = stmt.executeQuery("SELECT * FROM `modo_players` WHERE `NAME` = '" + PlayerName + "'");
			while(rs.next()){ 
				i+=1;
			} 
			rs.close();
			if(i == 0)
			{
				stmt.executeUpdate("INSERT INTO `modo_players` (`ID`, `NAME`, `BANNED`, `STATUS`) VALUES (NULL,'"
						+ PlayerName + "', "
						+ "'0', "
						+ "'0'"
						+ ");");
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			try { rs.close(); } catch (Exception e) { /* ignored */ }
			try { stmt.close(); } catch (Exception e) { /* ignored */ }
			try { conn.close(); } catch (Exception e) { /* ignored */ }
		}

	}
	public static void addIP(String PlayerName, String ip)
	{
		Connection conn = getConn();
		ResultSet rs = null;
		ResultSet rs2 = null;
		Statement stmt = null;

		try {
			stmt = (Statement) conn.createStatement();

			int id = 0;

			rs = stmt.executeQuery("SELECT `id` FROM `modo_players` WHERE `NAME` = '" + PlayerName + "'");

			while(rs.next()){ 
				id = rs.getInt("id");
			} 
			rs.close();
			rs2 = stmt.executeQuery("SELECT `ip` FROM `modo_ip` WHERE `id` = '" + id + "'");
			int i = 0;
			while(rs2.next()){ 
				i += 1;
			} 
			if(i == 0)
			{
				stmt.executeUpdate("INSERT INTO `modo_ip` (`ipid`, `ip`, `id`) VALUES (NULL,'"
						+ ip + "', '"
						+ id + "'"
						+ ");");
			}

		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally {
			try { rs.close(); } catch (Exception e) { /* ignored */ }
			try { rs2.close(); } catch (Exception e) { /* ignored */ }
			try { stmt.close(); } catch (Exception e) { /* ignored */ }
			try { conn.close(); } catch (Exception e) { /* ignored */ }
		}
	}

	public static ArrayList<String> getIPS(String PlayerName)
	{
		Connection conn = getConn();
		ResultSet rs = null;
		ResultSet rs2 = null;
		Statement stmt = null;

		ArrayList<String> ips = new ArrayList<String>();
		try
		{
			stmt = (Statement) conn.createStatement();

			int id = 0;

			rs = stmt.executeQuery("SELECT `id` FROM `modo_players` WHERE `NAME` = '" + PlayerName + "'");

			while(rs.next()){ 
				id = rs.getInt("id");
			} 
			rs.close();
			rs2 = stmt.executeQuery("SELECT `ip` FROM `modo_ip` WHERE `id` = '" + id + "'");
			while(rs2.next()){ 
				ips.add(rs2.getString("ip"));
			} 
			rs2.close();
		}
		catch(Exception ex)
		{

		}finally {
			try { rs.close(); } catch (Exception e) { /* ignored */ }
			try { rs2.close(); } catch (Exception e) { /* ignored */ }
			try { stmt.close(); } catch (Exception e) { /* ignored */ }
			try { conn.close(); } catch (Exception e) { /* ignored */ }
		}
		return ips;
	}
	public static ArrayList<String> getAllAccounts(String PlayerName, dPlayer dp)
	{
		Connection conn = getConn();
		ResultSet rs = null;
		ResultSet rs2 = null;
		Statement stmt = null;
		ArrayList<String> playerNames = new ArrayList<String>();
		ArrayList<String> ids = new ArrayList<String>();
		try
		{
			stmt = (Statement) conn.createStatement();

			for(String ip: dp.Ips)
			{
				//ProxyServer.getInstance().getLogger().info(ip);
				rs2 = stmt.executeQuery("SELECT `id` FROM `modo_ip` WHERE `ip` = '" + ip + "'");
				while(rs2.next()){ 

					ids.add(rs2.getString("id"));
					//ProxyServer.getInstance().getLogger().info(ids.toString());
				} 
				rs2.close();
			}

			for(String id : ids)
			{
				//ProxyServer.getInstance().getLogger().info(id);
				rs = stmt.executeQuery("SELECT `NAME` FROM `modo_players` WHERE `id` = '" + id + "'");
				while(rs.next()){ 
					playerNames.add(rs.getString("NAME"));
				}
				rs.close();
			}
		}
		catch(Exception ex)
		{
			ex.printStackTrace();
		}finally {
			try { rs.close(); } catch (Exception e) { /* ignored */ }
			try { rs2.close(); } catch (Exception e) { /* ignored */ }
			try { stmt.close(); } catch (Exception e) { /* ignored */ }
			try { conn.close(); } catch (Exception e) { /* ignored */ }
		}
		return playerNames;
	}
	public static String getApprouved(String PlayerName)
	{
		Connection conn = getConn();
		ResultSet rs = null;
		Statement stmt = null;
		int i = 0;
		try
		{
			 stmt = (Statement) conn.createStatement();
			 rs = stmt.executeQuery("SELECT `STATUS` FROM `modo_players` WHERE `NAME` = '" + PlayerName + "'");
			while(rs.next()){ 
				i = rs.getInt("STATUS");
			}
			rs.close();
		}
		catch(Exception ex)
		{
			ex.printStackTrace();
		}finally {
			try { rs.close(); } catch (Exception e) { /* ignored */ }
			try { stmt.close(); } catch (Exception e) { /* ignored */ }
			try { conn.close(); } catch (Exception e) { /* ignored */ }
		}
		if(i == 0)
		{
			return "§7";
		}else if(i == 1)
		{
			return "§6";
		}else if(i == 2)
		{
			return "§a";
		}else if(i == 3)
		{
			return "§a";
		}else
		{
			return "§8";
		}

	}
